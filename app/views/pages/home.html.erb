<section>
  <h1>Bienvenue sur CryptoDesk</h1>
  <br>
  <div class="container">
    <div class="row align-items-center">
      <div class="col">
        <%= form_for(:crypto, url: scrap_path) do |f| %>
              <%= f.submit "Scrapper", class:"btn btn-primary"%>
          <% end %>
      </div>
      <div class="col">
        <%= form_for(:crypto, url: refresh_path) do |f| %>
              <%= f.submit "Rafraichir", class:"btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
  <br>
    <div class="container">
      <div class="row align-items-center">
        <table class="table">
          <thead class="thead-light">
            <tr class="tbody">
              <th class="col name">Name</th>
              <th class="col">Price</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody class="tbody">
            <% @cryptos.each do |crypto| %>
              <tr>
                <td class="row align-items-center stuff"><%= crypto.name %></td>
                <td><%= crypto.price %></td>
                <td><%= link_to 'Show', crypto, class: 'btn btn-sm btn-outline-success' %></td>
                <td><%= link_to 'Edit', edit_crypto_path(crypto), class: 'btn btn-sm btn-outline-info' %></td>
                <td><%= link_to 'Destroy', crypto, class:'btn btn-sm btn-outline-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</section>
