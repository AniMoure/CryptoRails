<p id="notice"><%= notice %></p>

<h1>Cryptos</h1>
<br>
<br>

<%= form_for(:crypto, url: unit_path) do |f| %>
    	<%= f.collection_select :name, Crypto.order(:name), :name, :name, :include_blank => false %>
      <%= f.submit "Afficher", class:"btn btn-sm btn-primary" %>
	<% end %>
<br>
<br>
<div class="container">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th class="col">Name</th>
        <th class="col">Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cryptos.each do |crypto| %>
        <tr>
          <td class="row"><%= crypto.name %></td>
          <td><%= crypto.price %></td>
          <td><%= link_to 'Show', crypto %></td>
          <td><%= link_to 'Edit', edit_crypto_path(crypto) %></td>
          <td><%= link_to 'Destroy', crypto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
